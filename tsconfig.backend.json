{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.backend.tsbuildinfo",
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist/backend",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/backend/*"]
    }
  },
  "include": [
    "src/backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}