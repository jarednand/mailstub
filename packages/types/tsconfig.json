{
  "compilerOptions": {
    "target": "es2020",        
    "module": "commonjs",      
    "outDir": "./dist",       
    "rootDir": "./src",         
    "strict": true,           
    "esModuleInterop": true,  
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*"            
  ],
  "exclude": [
    "node_modules",       
    "dist"
  ]
}
