{
  "name": "mailstub",
  "version": "0.1.1",
  "description": "Email testing tool for developers",
  "author": "Jared Nand",
  "license": "MIT",
  "bin": {
    "mailstub": "./bin/mailstub.js"
  },
  "scripts": {
    "dev:frontend": "vite --config vite.config.ts",
    "dev:backend": "tsx --tsconfig tsconfig.backend.json -r tsconfig-paths/register src/backend/server.ts",
    "dev": "pnpm dev:frontend & pnpm dev:backend",
    "build:frontend": "vite build",
    "build:backend": "echo 'Building backend...' && tsc -p tsconfig.build.json && echo '✓ Compiled' && tsc-alias -p tsconfig.build.json && echo '✓ Aliases resolved'",
    "build": "pnpm build:frontend && pnpm build:backend",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:frontend": "vitest run --project frontend",
    "test:backend": "vitest run --project backend",
    "prepublishOnly": "pnpm test:run && pnpm build"
  },
  "files": [
    "bin",
    "dist",
    "drizzle"
  ],
  "keywords": [
    "mailstub",
    "email",
    "testing",
    "smtp",
    "development",
    "mail"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jarednand/mailstub.git"
  },
  "bugs": {
    "url": "https://github.com/jarednand/mailstub/issues"
  },
  "homepage": "https://github.com/jarednand/mailstub#readme",
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.4",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "lucide-react": "^0.548.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.65.0",
    "sonner": "^2.0.7",
    "supertest": "^7.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
